{
    "version": 2,
    "builds": [
      {
        "src": "server/src/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      {
        "src": "/v1/(.*)",
        "dest": "server/src/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "clients/build/$1"
      }
    ]
  }